<script>


    var departmentListComponent = null;
    var departmentFormComponent = null;

    function addDepartment(el) {

        $("#add").hide();

        $("#ul").hide();
        $("#uc").show();
        $("#uu").hide();
        $("#sv").show();
        $("#updt").hide();
        departmentListComponent.hide();
        departmentFormComponent.show();
        departmentFormComponent.populateData(null);

        $(el).hide();

    }

    $(function () {
        departmentListComponent = new PBDepartmentListComponent("department-list", "/ApiDepartment/GetDepartments");

        departmentListComponent.deleteURL = "ApiDepartment/DeleteDepartment";

        departmentFormComponent = new PBDepartmentFormComponent("department-form"); //, "/ApiUser/SaveUser");
        departmentFormComponent.saveURL = "ApiDepartment/SaveDepartment";
        departmentFormComponent.updateURL = "ApiDepartment/UpdateDepartment";
        
        departmentFormComponent.onSaveCompleted = function () {
            departmentListComponent.getData();
            departmentListComponent.show();
            departmentFormComponent.hide();
            $("#add").show();
            $("#ul").show();
        }

        departmentListComponent.onEditClicked = function (recToEdit) {
            $("#ul").hide();
            $("#uc").hide();
            $("#add").hide();
            $("#uu").show();
            departmentListComponent.hide();
            departmentFormComponent.show();
            departmentFormComponent.populateData(recToEdit);
            $("#cv").hide();
            $("#sv").hide();
            $("#updt").show();


        }

        departmentFormComponent.onCancelled = function () {
            departmentListComponent.show();
            departmentFormComponent.hide();
            $("#add").show();
            $("#ul").show();
            $("#title").html("");
        }
        departmentFormComponent.onUpdateCompleted = function () {
            departmentListComponent.show();
            departmentListComponent.getData();
            departmentFormComponent.hide();
            $("#add").show();
            $("#title").html("");
        }

        departmentListComponent.onDeleteCompleted = function () {
            departmentListComponent.getData();
        }

    })
</script>
