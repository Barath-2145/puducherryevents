<script>

    function showPreview(event) {
        if (event.target.files.length > 0) {
            var src = URL.createObjectURL(event.target.files[0]);
            var preview = document.getElementById("company-logo-preview");
            preview.src = src;
            preview.style.display = "block";
        }
    }

    var placeListComponent = null;
    var placeFormComponent = null;

    function addPlace(el) {

        $("#add").hide();

        $("#ul").hide();
        $("#uc").show();
        $("#uu").hide();
        $("#sv").show();
        $("#updt").hide();
        placeListComponent.hide();
        placeFormComponent.show();
        placeFormComponent.populateData(null);

        $(el).hide();

    }

    $(function () {
        placeListComponent = new PBPlaceListComponent("place-list", "/ApiEvent/GetEventPlaces");

        placeListComponent.deleteURL = "ApiEvent/DeleteEventPlace";

        placeFormComponent = new PBPlaceFormComponent("place-form"); //, "/ApiUser/SaveUser");
        placeFormComponent.saveURL = "ApiEvent/SaveEventPlace";
        placeFormComponent.updateURL = "ApiEvent/UpdateEventPlace";

        placeFormComponent.onSaveCompleted = function () {
            placeListComponent.getData();
            placeListComponent.show();           
            placeFormComponent.hide();
            $("#add").show();
            $("#ul").show();
        }

        placeListComponent.onEditClicked = function (recToEdit) {
            $("#prv").show();
            $("#ul").hide();
            $("#uc").hide();
            $("#uu").show();
            $("#add").hide();
            placeListComponent.hide();
            placeFormComponent.show();
            placeFormComponent.populateData(recToEdit);
            $("#cv").hide();
            $("#sv").hide();
            $("#updt").show();
        }

        placeFormComponent.onCancelled = function () {
            placeListComponent.show();
            placeFormComponent.hide();
            $("#add").show();
            $("#ul").show();
            $("#title").html("");
        }
        placeFormComponent.onUpdateCompleted = function () {
            placeListComponent.show();
            placeListComponent.getData();
            placeFormComponent.hide();
            $("#add").show();
            $("#title").html("");
        }

        placeListComponent.onDeleteCompleted = function () {
            placeListComponent.getData();
        }

    })
</script>
