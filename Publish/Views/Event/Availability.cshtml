    const checkbox = document.getElementById('rules');

    const box = document.getElementById('check-ava');

    checkbox.addEventListener('click', function handleClick() {
        if (checkbox.checked) {
            box.style.display = 'block';
        } else {
            box.style.display = 'none';
        }
    });

    var dtToday = new Date();

    var month = dtToday.getMonth() + 1;
    var day = dtToday.getDate()+7;
    var year = dtToday.getFullYear();
    if (month < 10)
        month = '0' + month.toString();
    if (day < 10)
        day = '0' + day.toString();

    var minDate = year + '-' + month + '-' + day;
    //var maxdate = '2022' + '-' + '10' + '-' + '31';

    $('#start-booking-date').attr('min', minDate)
    $('#end-booking-date').attr('min', minDate)
</script>
