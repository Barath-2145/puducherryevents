<div id="main">

    <section id="values" class="values">
        <div class="sec-title-style1 text-center max-width">
            <div class="title">Event Lists</div>
            <div class="text"><div class="decor-left"><span></span></div><p>Check out the events for booking</p><div class="decor-right"><span></span></div></div>

        </div>


        <script type="text/template" id="list-item-template">

            <div id="fill" style=" border-radius:12px; text-align:center; background-color:#a9c4f794; width:96%; height:345px;">
                <br />
                <div class="d-flex justify-content-center align-items-center">
                    <img src='{{eventimage}}' style="height:160px; width:80%; border-radius:12px;"><br />
