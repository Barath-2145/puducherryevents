<script>


    var userListComponent = null;
    var userFormComponent = null;

    function addUser(el) {   
        
        $("#add").hide();
      
        $("#ul").hide();
        $("#uc").show();
        $("#uu").hide();
        $("#sv").show();
        $("#updt").hide();
        userListComponent.hide();
        userFormComponent.show();
        userFormComponent.populateData(null);

        $(el).hide();

    }

    $(function () {
        userListComponent = new PBUserListComponent("user-list", "/ApiUser/GetUsers");

        userListComponent.deleteURL = "ApiUser/DeleteUser";

        userFormComponent = new PBUserFormComponent("user-form"); //, "/ApiUser/SaveUser");
        userFormComponent.saveURL = "ApiUser/SaveUser";
        userFormComponent.updateURL = "ApiUser/UpdateUser";
        userFormComponent.nameURL = "ApiCustomer/GetCustomers";
        userFormComponent.userDataURL = "/ApiUser/SearchUser";
        userFormComponent.onSaveCompleted = function () {
            userListComponent.getData();
            userListComponent.show();
            userFormComponent.hide();
            $("#add").show();
            $("#ul").show();
        }

        userListComponent.onEditClicked = function (recToEdit) {
            $("#ul").hide();
            $("#uc").hide();
            $("#uu").show();
            $("#add").hide();
            userListComponent.hide();
            userFormComponent.show();
            userFormComponent.populateData(recToEdit);
            $("#cv").hide();
            $("#sv").hide();
            $("#updt").show();


        }

        userFormComponent.onCancelled = function () {
            userListComponent.show();
            userFormComponent.hide();
            $("#add").show();
            $("#ul").show();
            $("#title").html("");
        }
        userFormComponent.onUpdateCompleted = function () {
            userListComponent.show();
            userListComponent.getData();
            userFormComponent.hide();
            $("#add").show();
            $("#title").html("");
        }

        userListComponent.onDeleteCompleted = function () {
            userListComponent.getData();
        }

    })
</script>